# MathVerse Backend API - Environment Variables
# Copy this file to .env and fill in the values

# Application Configuration
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=true
LOG_LEVEL=debug

# Security Settings
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Database Configuration
DATABASE_URL=postgresql+asyncpg://mathverse:mathverse@localhost:5432/mathverse
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@mathverse.local
EMAILS_FROM_NAME=MathVerse

# File Storage
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=/tmp/mathverse/uploads
S3_BUCKET_NAME=mathverse-content
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=

# External Services
ANIMATION_ENGINE_URL=http://localhost:8001
VIDEO_RENDERER_URL=http://localhost:8002
CONTENT_METADATA_URL=http://localhost:8003
RECOMMENDATION_ENGINE_URL=http://localhost:8004

# Rate Limiting
RATE_LIMIT_STRATEGY=fixed-window
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_2FA=false

# Logging
LOG_FORMAT=json
LOG_FILE=/tmp/mathverse/logs/backend.log
