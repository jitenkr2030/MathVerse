# MathVerse Animation Engine - Environment Variables
# Copy this file to .env and fill in the values

# Application Configuration
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8001
DEBUG=true
LOG_LEVEL=debug

# API Keys (optional)
# OPENAI_API_KEY=your_openai_key_here
# ELEVENLABS_API_KEY=your_elevenlabs_key_here

# Database Configuration (optional, for scene caching)
DATABASE_URL=postgresql+asyncpg://mathverse:mathverse@localhost:5432/mathverse_animation
REDIS_URL=redis://localhost:6379/2

# Animation Settings
MANIM_QUALITY=medium_quality
MANIM_OUTPUT_FORMAT=mp4
MANIM_RENDERER=cairo

# Voiceover Settings (optional)
VOICEOVER_ENGINE=none
TTS_API_ENDPOINT=http://localhost:8005

# Storage Configuration
ANIMATION_OUTPUT_DIR=/tmp/mathverse/animations
MAX_CONCURRENT_RENDERS=2
RENDER_TIMEOUT_SECONDS=300

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true
