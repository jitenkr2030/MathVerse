# MathVerse Content Metadata Service - Environment Variables
# Copy this file to .env and fill in the values

# Application Configuration
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8003
DEBUG=true
LOG_LEVEL=debug

# Database Configuration
DATABASE_URL=postgresql+asyncpg://mathverse:mathverse@localhost:5432/mathverse_metadata
REDIS_URL=redis://localhost:6379/6

# Elasticsearch Configuration (optional, for advanced search)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=mathverse_content
ELASTICSEARCH_API_KEY=

# NLP Settings
SPACY_MODEL=en_core_web_sm
TRANSFORMERS_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Content Processing
MAX_CONTENT_LENGTH=100000
SUPPORTED_CONTENT_TYPES=video,audio,image,document,animation
METADATA_CACHE_TTL=3600

# Search Configuration
SEARCH_RESULTS_PER_PAGE=20
MAX_SEARCH_RESULTS=1000
SIMILARITY_THRESHOLD=0.7

# Rate Limiting
RATE_LIMIT_REQUESTS=200
RATE_LIMIT_WINDOW=60

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true
