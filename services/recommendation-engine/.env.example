# MathVerse Recommendation Engine Service - Environment Variables
# Copy this file to .env and fill in the values

# Application Configuration
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8004
DEBUG=true
LOG_LEVEL=debug

# Database Configuration
DATABASE_URL=postgresql+asyncpg://mathverse:mathverse@localhost:5432/mathverse_recommendations
REDIS_URL=redis://localhost:6379/7

# ML Model Settings
RECOMMENDATION_MODEL=hybrid
COLLABORATIVE_FILTERING_MODEL=als
CONTENT_BASED_MODEL=tfidf

# Model Paths
MODEL_CACHE_DIR=/tmp/mathverse/models
LATEST_MODEL_VERSION=latest

# Recommendation Settings
DEFAULT_RECOMMENDATIONS_COUNT=10
MAX_RECOMMENDATIONS_COUNT=50
CACHE_RECOMMENDATIONS_TTL=1800

# A/B Testing
ENABLE_AB_TESTING=false
AB_TEST_PERCENTAGE=10

# Logging and Monitoring
ENABLE_PROMETHEUS_METRICS=true
PROMETHEUS_PORT=9091
LOG_RECOMMENDATIONS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=300
RATE_LIMIT_WINDOW=60

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true
