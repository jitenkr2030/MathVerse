# MathVerse Video Renderer Service - Environment Variables
# Copy this file to .env and fill in the values

# Application Configuration
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8002
DEBUG=true
LOG_LEVEL=debug

# Database Configuration
DATABASE_URL=postgresql+asyncpg://mathverse:mathverse@localhost:5432/mathverse_video
REDIS_URL=redis://localhost:6379/3

# Celery Configuration (Background Task Queue)
CELERY_BROKER_URL=redis://localhost:6379/4
CELERY_RESULT_BACKEND=redis://localhost:6379/5

# Video Processing Settings
FFMPEG_BINARY=/usr/bin/ffmpeg
FFPROBE_BINARY=/usr/bin/ffprobe
OUTPUT_FORMAT=mp4
DEFAULT_VIDEO_CODEC=libx264
DEFAULT_AUDIO_CODEC=aac

# Quality Presets
VIDEO_QUALITY_PRESETS=360p,480p,720p,1080p
DEFAULT_QUALITY=720p

# Storage Configuration
TEMP_DIR=/tmp/mathverse/renderer
OUTPUT_DIR=/tmp/mathverse/output
MAX_CONCURRENT_RENDERS=4
MAX_RENDER_TIMEOUT=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_WINDOW=60

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true

# Monitoring
ENABLE_PROMETHEUS_METRICS=true
PROMETHEUS_PORT=9090
